@model IEnumerable<Module7_InternshipShortlisting.Models.Candidate>

@{
    ViewBag.Title = "Shortlist";
}

<h2>Shortlist</h2>

<form asp-action="Shortlist" method="get">
    <div class="form-actions no-color">
        <p>
            Find by name: &nbsp;<input type="text" name="SearchString" value="@ViewData["currentFilter"]" />&nbsp;
            <input type="submit" value="Search" class="btn btn-default" />
        </p>
    </div>
</form>

<br/>

<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Designation
        </th>
        <th>
            Years of Experience
        </th>
        <th>
            City
        </th>
        <th>
            Degree
        </th>
        <th>
            Department of Interest
        </th>
        <th>
            Institute
        </th>
        <th></th>
    </tr>

   @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Designation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YearsofExperience)
            </td>
           <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Degree)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepartmentofInterest)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Institute)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id }) 
            </td>
        </tr>
    }

</table>
